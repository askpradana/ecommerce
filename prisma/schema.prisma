enum Gender {
  MALE
  FEMALE
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId       String   @id @default(cuid())
  userEmail    String   @unique
  name         String
  password     String
  token        String?
  refreshToken String?
  profile      Profile?
}

model Profile {
  profileID    String @id @default(cuid())
  profileEmail String @unique
  userEmail    User   @relation(fields: [profileEmail], references: [userEmail])
  phone        String
  gender       Gender
  address      String
  Cart         Cart[]
}

model Cart {
  cartID     String       @id @default(cuid())
  cartOwner  Profile      @relation(fields: [cartID], references: [profileID])
  itemDetail ItemDetail[]
}

model KategoriList {
  id       String       @id @unique @default(cuid())
  name     String       @unique
  ItemList ItemDetail[]
}

model ItemDetail {
  id            String       @id @unique @default(cuid())
  name          String
  description   String
  price         Int
  sold          Int
  rating        Int
  storeLocation String
  storeName     String
  image         String
  itemCategory  String
  category      KategoriList @relation(fields: [itemCategory], references: [name])
  ItemComment   ItemComment?
  cartID        String?
  Cart          Cart?        @relation(fields: [cartID], references: [cartID])
}

model ItemComment {
  id           String     @id @unique @default(cuid())
  username     String
  comment      String
  rating       Int
  itemDetailID ItemDetail @relation(fields: [id], references: [id])
}
